modules = ["php-8.2", "bash", "web", "nodejs-20", "postgresql-16"]

[nix]
channel = "stable-25_05"

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Laravel App"

[[workflows.workflow]]
name = "Laravel App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "DB_CONNECTION=pgsql DB_HOST=$PGHOST DB_PORT=$PGPORT DB_DATABASE=$PGDATABASE DB_USERNAME=$PGUSER DB_PASSWORD=$PGPASSWORD php artisan serve --host=0.0.0.0 --port=5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 36301
externalPort = 3001

[[ports]]
localPort = 40511
externalPort = 3000

[[ports]]
localPort = 46723
externalPort = 3002

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "php artisan config:clear && php artisan cache:clear && php artisan view:clear && php artisan route:clear && DB_CONNECTION=pgsql DB_HOST=$DB_HOST DB_PORT=$DB_PORT DB_DATABASE=$DB_DATABASE DB_USERNAME=$DB_USERNAME DB_PASSWORD=$DB_PASSWORD php artisan serve --host=0.0.0.0 --port=5000"]
build = ["bash", "-c", "composer install --no-dev --optimize-autoloader && npm install && npm run build && php artisan config:clear && php artisan cache:clear && php artisan view:clear && php artisan route:clear"]
